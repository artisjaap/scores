{
  "name": "scores",
  "version": "1.0.0",
  "description": "Scores application with WebSocket support",
  "main": "websocket-server.js",
  "scripts": {
    "start": "concurrently -n backend,frontend -c blue,green \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "node websocket-server.js",
    "start:frontend": "npm run start --prefix frontend",
    "dev": "nodemon websocket-server.js"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "concurrently": "^9.0.1"
  }
}
